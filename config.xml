<?xml version='1.0' encoding='utf-8'?>
<widget id="io.onsen.kitchensink" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>react-onsenui-kitchensink</name>
    <description>
        Kitchen Sink example for Onsen UI 2.0 React extension.
    </description>
    <author email="andreas@argeli.us" href="https://onsen.io/v2/react.html">
        Andreas Argelius
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
